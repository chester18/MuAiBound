<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/mL"
        android:gravity="left|center_vertical">

        <com.joanzapata.iconify.widget.IconTextView
            android:text="{ion-ios-contact-outline}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_4_use"
            android:textSize="36dp"
            android:textColor="@color/mR"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_4_acc_name"
            android:textColor="@color/cardview_light_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/frag_4_submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/clean"
                android:gravity="right"
                android:text="退出登录"
                tools:textColor="@color/cardview_light_background" />
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_subFragment"
    android:orientation="horizontal">

</LinearLayout>

</LinearLayout>