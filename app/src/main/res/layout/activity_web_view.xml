<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mL"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/ftitle"
        >

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="{ion-chevron-left}"
            android:textSize="32dp"
            android:textColor="@color/CW"
            android:layout_weight="4"
            android:id="@+id/wb_detail_backICO"
            android:textAlignment="center"
            ></com.joanzapata.iconify.widget.IconTextView>

        <TextView
            android:text="订单详情"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_detail_title"
            android:textSize="20dp"
            android:textColor="@color/CW"
            android:layout_weight="1"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="14dp"
            android:layout_weight="4"
            android:textColor="@color/CW"
            android:id="@+id/paper_timer"
            android:textAlignment="center"></TextView>
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/web_webview"/>
</LinearLayout>