<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="记录"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/textView7"
        android:gravity="center"
        android:background="@color/mL"
        android:textColor="@color/CW"
        android:textSize="18sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkGray">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:text="妈妈护理记录："
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@color/orange1"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"/>

            <ListView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/third_mama"
                android:background="@drawable/line_radio10_white"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/mama_work"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_radio10_white"
                    android:text="开始记录"
                    android:textColor="@color/mL" />

                <Button
                    android:id="@+id/mama_History"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_radio10_white"
                    android:text="历史记录" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray_light"
            android:layout_marginTop="1dp"
            android:gravity="center">
            <TextView
                android:text="宝宝护理记录："
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView70"
                android:textColor="@color/orange1"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"/>

            <ListView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/third_baobao"
                android:background="@drawable/line_radio10_white"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/bao_work"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_radio10_white"
                    android:text="开始记录"
                    android:textColor="@color/mL" />

                <Button
                    android:id="@+id/bao_History"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_radio10_white"
                    android:text="历史记录" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>