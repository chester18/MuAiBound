<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mL"
        android:gravity="center">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/sch_backICO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="{ion-chevron-left}"
            android:textAlignment="center"
            android:textColor="@color/CW"
            android:textSize="32dp"></com.joanzapata.iconify.widget.IconTextView>

        <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:text="我的档期"
            android:textColor="@color/CW"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/sch_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/clean"
            android:text="提交"
            android:textColor="@color/CW"/>


    </LinearLayout>

    <Button
        android:id="@+id/sch_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="起始时间"/>

    <Button
        android:id="@+id/sch_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结束时间"/>

    <DatePicker
        android:id="@+id/datePicker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:startYear="2015"
        android:endYear="2020"
        android:calendarViewShown="true"
        android:spinnersShown="false"
        />


</LinearLayout>