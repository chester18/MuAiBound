<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mL"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/ftitle"
        >

        <com.joanzapata.iconify.widget.IconTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="{ion-chevron-left}"
            android:textSize="32dp"
            android:textColor="@color/CW"
            android:layout_weight="4"
            android:id="@+id/paper_backICO"
            android:textAlignment="center"
            ></com.joanzapata.iconify.widget.IconTextView>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/paper_title"
            android:textSize="20dp"
            android:textColor="@color/CW"
            android:layout_weight="1"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="30m"
            android:textSize="14dp"
            android:layout_weight="4"
            android:textColor="@color/CW"
            android:id="@+id/paper_timer"
            android:textAlignment="center"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"

        android:orientation="vertical"
        android:layout_below="@+id/ftitle"
        android:layout_above="@+id/paper_foot"
        android:id="@+id/paper_fragment"></LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/mL"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:gravity="center"
        android:id="@+id/paper_foot">

    <Button
        android:text="上一题"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paper_up"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:background="@color/clean"
        android:textColorHighlight="@color/CW"
        android:textColor="@color/CW"
        android:layout_marginLeft="10dp" />

        <Button
            android:text="下一题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paper_next"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/CW"
            android:background="@color/clean"
            android:textColorHighlight="@color/CW"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</RelativeLayout>
