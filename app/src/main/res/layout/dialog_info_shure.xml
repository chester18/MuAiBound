<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="262dp"
    android:layout_height="wrap_content"
    android:background="@drawable/radio10_dark_gray"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_info_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/CW"
        android:gravity="center"
        android:textColor="@color/font_title"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/CW"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_info_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="TextView"
            android:textColor="@color/font_unselect"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_info_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/CW"
        android:text="确定"
        android:textColor="@color/font_select" />
</LinearLayout>