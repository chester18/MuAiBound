<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:gravity="center">

        <ImageView
            android:layout_width="194dp"
            android:layout_height="194dp"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:src="@drawable/mlog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.joanzapata.iconify.widget.IconTextView
            android:text="{ion-ios-contact-outline}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ruse"
            android:textSize="28dp"
            android:textColor="@color/mR" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/reg_name"
            android:hint="用户名"
            android:textSize="16dp"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.joanzapata.iconify.widget.IconTextView
            android:text="{ion-ios-locked}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="28dp"
            android:textColor="@color/mR" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/reg_pass"
            android:hint="密码"
            android:textSize="16dp"
            android:layout_marginLeft="4dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <com.joanzapata.iconify.widget.IconTextView
            android:text="{ion-ios-locked-outline}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="28dp"
            android:textColor="@color/mR" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/reg_rrpass"
            android:hint="确认密码"
            android:textSize="16dp"
            android:layout_marginLeft="4dp" />

    </LinearLayout>
    <Button
        android:text="注    册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_ben"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/radio10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    <Button
        android:text="返    回"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_back"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:background="@drawable/radio10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />



</LinearLayout>